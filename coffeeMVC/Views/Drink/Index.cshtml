<head>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Add styles for the images */
        .item img {
            width: 100%;
            max-width: 200px;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        /* Add styles for the container */
        #mnsry_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            margin: 0 auto;
            max-width: 960px;
        }

        /* Add styles for the items */
        .item {
            width: 250px;
            height: 300px;
            margin: 20px;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            text-align: center;
            position: relative;
        }

            .item h2 {
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div id="mnsry_container">
        @foreach (var drink in Model)
        {
            <article class="item group2">
                <img src="@drink.ImageUrl" />
                <h2>@drink.Name</h2>



                <a href="/Product/@drink.Name" class="page-scroll btn btn-xl"> order @drink.Name"</a>

            </article>
           
     


        }
     
    </div>

</body>
