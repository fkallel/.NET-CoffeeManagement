<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - coffeeMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/coffeeMVC.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Mascotte</a>

            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link" href="/User/Index">Users</a>

            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Choice">Choice</a>
            <partial name="_LoginPartial" />
        </nav>
        <style>
            .navbar {
                background-color: #333;
                overflow: hidden;
            }

                .navbar a {
                    float: left;
                    color: white;
                    text-align: center;
                    padding: 14px 16px;
                    text-decoration: none;
                }

                    .navbar a:hover {
                        background-color: #ddd;
                        color: black;
                    }

                    .navbar a.active {
                        background-color: #4CAF50;
                        color: white;
                    }
        </style>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - coffeeMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
